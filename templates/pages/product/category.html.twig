{% extends 'base.html.twig' %}
{% block title%}
    Liste des Products par Catégorie
{% endblock %}

{% block body %}
    {{ form_start(form) }}

    <div class="form-row align-items-end">
        <div class="col">
            {{ form_row(form.category) }}
        </div>

        <div class="col">
            <div class="form-group">
                <button type="submit" class="btn btn-success">Rechercher</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

    {% if products %}
        <table id="products" class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Catégorie</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.title }}</td>
                        <td>{{ product.price }}</td>
                        <td>{{ product.category.title }}</td>
                        <td>
                            <a href="/product/{{ product.id }}" class="btn btn-primary">lire</a>
                            <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-dark">editer |</a>
                            <a href="/product/delete/{{ product.id }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de supprimer cet product?');">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun products</p>
    {% endif %}
{% endblock %}


